
@{
    // Không dùng layout
    Layout = null;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Form Đăng Ký Tuyển Dụng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container my-4">
    <h2 class="text-center mb-4">Form Đăng Ký Tuyển Dụng</h2>
        <div class="text-center mt-2">
            <p>
                Link url :
                <span id="pageUrl" class="text-primary" style="word-break: break-all;"></span>
                <button class="btn btn-sm btn-outline-secondary ms-2" onclick="copyUrl()">Copy</button>
            </p>
        </div>
    <!-- Thêm asp-action, asp-controller nếu muốn POST về controller -->
    <form asp-action="" asp-controller="" method="post">

            <!-- 1. Thông tin công ty -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    1. Thông tin công ty / doanh nghiệp tuyển dụng
                </div>
                <div class="card-body row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Tên công ty</label>
                        <input type="text" class="form-control" name="companyName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mã công ty</label>
                        <input type="text" class="form-control" name="companyCode">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Địa chỉ công ty</label>
                        <input type="text" class="form-control" name="companyAddress">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ngày tạo</label>
                        <input type="date" class="form-control" name="createdDate">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ngày hết hạn</label>
                        <input type="date" class="form-control" name="expiredDate">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Thông tin tuyển dụng</label>
                        <textarea class="form-control" name="recruitInfo" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <!-- 2. Thông tin học sinh/người đăng ký -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    2. Thông tin học sinh / người đăng ký
                </div>
                <div class="card-body row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Họ tên</label>
                        <input type="text" class="form-control" name="studentName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Giới tính</label>
                        <select class="form-select" name="gender">
                            <option selected disabled>Chọn giới tính</option>
                            <option>Nam</option>
                            <option>Nữ</option>
                            <option>Khác</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Năm sinh</label>
                        <input type="number" class="form-control" name="birthYear">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Dân tộc</label>
                        <input type="text" class="form-control" name="ethnicity">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control" name="phone">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Hộ khẩu thường trú</label>
                        <input type="text" class="form-control" name="permanentAddress">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Chỗ ở hiện nay</label>
                        <input type="text" class="form-control" name="currentAddress">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Điểm trung bình THPT</label>
                        <input type="text" class="form-control" name="highSchoolGPA">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Chứng chỉ IELTS</label>
                        <input type="text" class="form-control" name="ielts">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Chứng chỉ TOEIC</label>
                        <input type="text" class="form-control" name="toeic">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Các chứng chỉ khác</label>
                        <input type="text" class="form-control" name="otherCerts">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Giới thiệu về bản thân</label>
                        <textarea class="form-control" name="aboutMe" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <!-- 3. Thông tin gia đình -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    3. Thông tin gia đình / người thân
                </div>
                <div class="card-body row g-3">
                    <!-- Thông tin Bố -->
                    <h5 class="fw-bold">Thông tin Bố</h5>
                    <div class="col-md-6">
                        <label class="form-label">Họ tên bố</label>
                        <input type="text" class="form-control" name="fatherName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Năm sinh</label>
                        <input type="number" class="form-control" name="fatherBirthYear">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control" name="fatherPhone">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nghề nghiệp</label>
                        <input type="text" class="form-control" name="fatherJob">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Chỗ ở hiện nay</label>
                        <input type="text" class="form-control" name="fatherAddress">
                    </div>

                    <!-- Thông tin Mẹ -->
                    <h5 class="fw-bold mt-4">Thông tin Mẹ</h5>
                    <div class="col-md-6">
                        <label class="form-label">Họ tên mẹ</label>
                        <input type="text" class="form-control" name="motherName">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Năm sinh</label>
                        <input type="number" class="form-control" name="motherBirthYear">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control" name="motherPhone">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nghề nghiệp</label>
                        <input type="text" class="form-control" name="motherJob">
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Chỗ ở hiện nay</label>
                        <input type="text" class="form-control" name="motherAddress">
                    </div>
                </div>
            </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-5">Gửi đăng ký</button>
        </div>
    </form>


       
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Gán URL hiện tại vào span
        document.getElementById("pageUrl").textContent = window.location.href;

        // Hàm copy
        function copyUrl() {
            const url = document.getElementById("pageUrl").textContent;
            navigator.clipboard.writeText(url).then(() => {
                alert("Đã copy URL!");
            }).catch(err => {
                console.error("Không copy được: ", err);
            });
        }
    </script>
</body>
</html>
